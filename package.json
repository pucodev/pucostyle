{
  "name": "pucostyle",
  "version": "1.0.0",
  "description": "Guia de estilos",
  "license": "ISC",
  "author": "Jorge Estrada <jor1550g@gmail.com> (https://github.com/pucodev)",
  "scripts": {
    "build": "pnpm run build:no-min && pnpm run build:min",
    "build:min": "sass --style=compressed --no-source-map style/index.scss dist/pucostyle.min.css",
    "build:no-min": "sass --no-source-map style/index.scss dist/pucostyle.css",
    "dev": "sass -w style/index.scss dist/pucostyle.css",
    "dev:docu": "sass -w style/index-docu.scss docs/src/css/lib/pucostyle.css"
  },
  "devDependencies": {
    "sass": "1.69.5"
  }
}
